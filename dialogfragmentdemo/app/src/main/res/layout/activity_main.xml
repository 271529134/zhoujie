<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/edit_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="输入框Dialog"/>

    <Button
        android:id="@+id/edit_bundle_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="传值到Dialog"/>

    <Button
        android:id="@+id/edit_activity_bundle_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="Dialog传值到Actviity"/>

    <Button
        android:id="@+id/edit_alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="Alert_Dialog_Fragment"/>
</LinearLayout>
